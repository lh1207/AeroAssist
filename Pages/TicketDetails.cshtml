@page
@model AeroAssist.Models.TicketModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Ticket Details";
}

<div below-nav>
    @if (Model.Ticket != null)
    {
        var ticket = Model.Ticket;
        <li>@ticket.Title</li>
        <li>@ticket.Description</li>
        <li>@ticket.Status</li>
        <li>@ticket.Priority</li>
        <li>@ticket.Type</li>
        <li>@ticket.Assignee</li>
        <li>@ticket.Reporter</li>
        <li>@ticket.Created</li>
        <li>@ticket.Updated</li>
        <li>@ticket.Resolution</li>
        <li>@ticket.Comments</li>
        <li>@ticket.Attachments</li>
        <li>@ticket.Departments</li>
    }
    @{
        System.Diagnostics.Debug.Assert(Model.Tickets != null, "Model.Tickets != null");
    }
</div>