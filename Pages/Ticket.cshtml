@page
@model AeroAssist.Models.TicketModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Ticket Queue";
}


<div below-nav>
    <h1>Ticket Queue</h1>
    <p>Use this page to create, view, and manage tickets.</p>

    <!-- Buttons for CRUD operations -->
    <button onclick="location.href='@Url.Page("/CreateTicket")'" type="button">Create Ticket</button>

    <ul>
        @if (Model.Tickets != null)
        {
            foreach (var ticket in Model.Tickets)
            {
                <li><a href="@Url.Page("/TicketDetails", new { id = ticket.TicketId })">@ticket.Title</a></li>
            }
        } else
        {
            <li>No tickets found.</li>
        }
    </ul>

    @{
        System.Diagnostics.Debug.Assert(Model.Tickets != null, "Model.Tickets != null");
    }

